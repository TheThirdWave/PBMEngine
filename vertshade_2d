#version 330 core

layout(location = 0) in vec3 position;
layout(location = 1) in vec3 color;

uniform mat4 MVPMat;

out vec3 Color;
out vec3 Pos;

void main()
{
        Pos = position;
        Pos.x = Pos.x/Pos.z;
        Pos.y = Pos.y/Pos.z;
        Color = color;
        Pos.z = 0.0;
        gl_Position =  MVPMat * vec4(Pos, 1.0);
}
